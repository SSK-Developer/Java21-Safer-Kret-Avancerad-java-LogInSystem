		<Text layoutX="194.0" layoutY="71.0" strokeType="OUTSIDE"
			strokeWidth="0.0" text="Register">
			<font>
				<Font size="35.0" />
			</font>
		</Text>

		<Text layoutX="194" layoutY="125.0" strokeType="OUTSIDE"
			strokeWidth="0.0" text="Enter your username">
			<font>
				<Font size="15.0" />
			</font>
		</Text>
		<TextField fx:id="createUserNameInput" layoutX="194.0"
			layoutY="130.0" />

		<Text layoutX="195" layoutY="175" strokeType="OUTSIDE"
			strokeWidth="0.0" text="Enter your password">
			<font>
				<Font size="15.0" />
			</font>
		</Text>
		<TextField fx:id="createPasswordInput" layoutX="194.0"
