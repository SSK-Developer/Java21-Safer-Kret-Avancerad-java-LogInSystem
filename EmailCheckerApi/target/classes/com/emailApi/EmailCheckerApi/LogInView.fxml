	prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.emailApi.EmailCheckerApi.PrimaryController">
	<children>

		<Text layoutX="194.0" layoutY="71.0" strokeType="OUTSIDE"
			strokeWidth="0.0" text="Log In">
			<font>
				<Font size="35.0" />
			</font>
		</Text>

		<Text layoutX="194" layoutY="125.0" strokeType="OUTSIDE"
			strokeWidth="0.0" text="Enter your username">
